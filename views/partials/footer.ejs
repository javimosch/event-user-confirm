<div class="mt-8 py-4 border-t border-gray-200">
  <div class="text-center text-gray-600 text-sm space-y-4">
    <p>
      <a href="/" class="text-blue-600 hover:text-blue-800 font-medium">Home</a>
      <span class="text-gray-400 mx-1">•</span>
      <%= __('common.poweredBy') %> <a href="https://savoietech.fr" target="_blank" class="text-blue-600 hover:text-blue-800 font-medium">EventUserConfirm</a>
      <span class="text-gray-400 mx-1">•</span>
      <span class="text-gray-500"><%= __('common.tool') %> <a href="https://savoietech.fr" target="_blank" class="text-blue-600 hover:text-blue-800">Savoietech.fr</a></span>
    </p>
    <div class="flex justify-center items-center space-x-2">
      <span class="text-gray-500"><%= __('common.languageSelector') %>:</span>
      <select id="languageSelect" class="text-sm border rounded px-2 py-1" onchange="changeLanguage(this.value)">
        <option value="fr" <%= currentLocale === 'fr' ? 'selected' : '' %>><%= __('common.languages.fr') %></option>
        <option value="en" <%= currentLocale === 'en' ? 'selected' : '' %>><%= __('common.languages.en') %></option>
      </select>
    </div>
  </div>
</div>

<script>
function changeLanguage(lang) {
  document.cookie = `lang=${lang};path=/;max-age=31536000`;
  window.location.reload();
}
</script>
